<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>GestionRH Application</display-name>

    <!-- Session and Welcome Files -->
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Authentication Filter -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>filter.AuthenticationFilter</filter-class>
    </filter>
    <listener>
        <listener-class>util.AppContextListener</listener-class>
    </listener>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/chef/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/employe/*</url-pattern>
    </filter-mapping>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/views/errors/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/views/errors/500.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/views/errors/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/views/errors/error.jsp</location>
    </error-page>

    <!-- Servlet Declarations -->
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>controller.admin.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ErrorServlet</servlet-name>
        <servlet-class>controller.ErrorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeDashboardServlet</servlet-name>
        <servlet-class>controller.employe.EmployeDashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DemandeCongeServlet</servlet-name>
        <servlet-class>controller.employe.DemandeCongeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestionCongeServlet</servlet-name>
        <servlet-class>controller.chef.GestionCongeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChefDashboardServlet</servlet-name>
        <servlet-class>controller.chef.ChefDashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestionEmployeServlet</servlet-name>
        <servlet-class>controller.admin.GestionEmployeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestionDepartementServlet</servlet-name>
        <servlet-class>controller.admin.GestionDepartementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminProfilServlet</servlet-name>
        <servlet-class>controller.admin.AdminProfilServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChefProfilServlet</servlet-name>
        <servlet-class>controller.chef.ChefProfilServlet</servlet-class>
    </servlet>

    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorServlet</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeDashboardServlet</servlet-name>
        <url-pattern>/employe/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DemandeCongeServlet</servlet-name>
        <url-pattern>/employe/conges</url-pattern>
        <url-pattern>/employe/conges/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestionCongeServlet</servlet-name>
        <url-pattern>/chef/conges</url-pattern>
        <url-pattern>/chef/conges/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChefDashboardServlet</servlet-name>
        <url-pattern>/chef/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestionEmployeServlet</servlet-name>
        <url-pattern>/admin/employes</url-pattern>
        <url-pattern>/admin/employes/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestionDepartementServlet</servlet-name>
        <url-pattern>/admin/departements</url-pattern>
        <url-pattern>/admin/departements/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminProfilServlet</servlet-name>
        <url-pattern>/admin/profil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChefProfilServlet</servlet-name>
        <url-pattern>/chef/profil</url-pattern>
    </servlet-mapping>
</web-app>